<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/back">

<TextView  
    android:text="域名："
	android:layout_marginLeft = "20px"
   	android:layout_marginTop = "40px"
   	android:layout_width="100px" 
   	android:layout_height="40px"
/>
<TextView  
    android:text="端口："
	android:layout_marginLeft = "20px"
   	android:layout_marginTop = "80px"
   	android:layout_width="100px" 
   	android:layout_height="40px"
/>
<EditText   android:id="@+id/domain"  
	android:layout_marginLeft = "110px"
   	android:layout_marginTop = "40px"
	android:layout_width="100px" 
	android:layout_height="40px"></EditText>
<EditText  android:id="@+id/port" 
	android:layout_marginLeft = "110px"
   	android:layout_marginTop = "80px"
	android:layout_width="100px" 
	android:layout_height="40px">
</EditText>



 	<TextView  
    android:text="用户名："
	android:layout_marginLeft = "20px"
   	android:layout_marginTop = "120px"
   	android:layout_width="100px" 
   	android:layout_height="40px"
/>
<TextView  
    android:text="密码："
	android:layout_marginLeft = "20px"
   	android:layout_marginTop = "160px"
   	android:layout_width="100px" 
   	android:layout_height="40px"
/>
<EditText   android:id="@+id/name"  
	android:layout_marginLeft = "110px"
   	android:layout_marginTop = "120px"
	android:layout_width="100px" 
	android:layout_height="40px"></EditText>
<EditText  android:id="@+id/password" 
	android:layout_marginLeft = "110px"
   	android:layout_marginTop = "160px"
	android:layout_width="100px" 
	android:layout_height="40px">
</EditText>
<Button android:text="确定" 
	android:id="@+id/login"	
	android:layout_marginLeft = "20px"
   	android:layout_marginTop = "200px"
 	android:layout_width="90px" 
 	android:layout_height="40px">
 	</Button>
<Button android:text="取消" 
	android:id="@+id/exit"	
	android:layout_marginLeft = "120px"
   	android:layout_marginTop = "200px"
 	android:layout_width="90px" 
 	android:layout_height="40px">
 	</Button>

</RelativeLayout>
