<?xml version="1.0" encoding="utf-8"?>

<TableLayout android:id="@+id/RelativeLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/back" android:fadeScrollbars="true" android:fadingEdge="horizontal|vertical" android:scrollbars="horizontal|vertical" android:visibility="visible">
<TableRow android:id="@+id/TableRow01" android:layout_width="fill_parent" android:layout_height="wrap_content" android:visibility="visible">

<TextView android:layout_height="wrap_content" android:cursorVisible="true" android:layout_width="fill_parent" android:layout_weight="1" android:background="#11111111" android:id="@+id/caredtitle"></TextView>
</TableRow>
<TableRow android:id="@+id/TableRow02" android:layout_width="fill_parent" android:layout_height="fill_parent">

<Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1" android:text="定位" android:id="@+id/locating"></Button>
</TableRow>
<TableRow android:id="@+id/TableRow03" android:layout_height="fill_parent" android:layout_width="fill_parent"><Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:text="测量" android:id="@+id/measuring"></Button>
</TableRow>
<TableRow android:id="@+id/TableRow04" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView02" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:text="温度"></TextView>
<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:id="@+id/temperature" android:background="#11111111"></TextView>
<TextView android:id="@+id/TextView04" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:text="血压" android:textStyle="bold"></TextView>
<TextView android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="fill_parent" android:id="@+id/pressure" android:background="#11110111"></TextView>
</TableRow>
<TableRow android:id="@+id/TableRow05" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView01" android:layout_height="wrap_content" android:text="脉搏" android:layout_width="fill_parent" android:layout_weight="1"></TextView>
<TextView android:layout_height="wrap_content" android:id="@+id/pulse" android:layout_width="fill_parent" android:layout_weight="3" android:background="#11111111"></TextView>
</TableRow>
</TableLayout>
