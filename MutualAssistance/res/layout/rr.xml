<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/back">

<TextView  
    android:text="设备号码："
	android:layout_marginLeft = "20px"
   	android:layout_marginTop = "40px"
   	android:layout_width="100px" 
   	android:layout_height="40px"
/>
<TextView  
    android:text="设备名称："
	android:layout_marginLeft = "20px"
   	android:layout_marginTop = "80px"
   	android:layout_width="100px" 
   	android:layout_height="40px"
/>
<EditText   android:id="@+id/deviceId"  
	android:layout_marginLeft = "110px"
   	android:layout_marginTop = "40px"
	android:layout_width="100px" 
	android:layout_height="40px"></EditText>
<EditText  android:id="@+id/relationName" 
	android:layout_marginLeft = "110px"
   	android:layout_marginTop = "80px"
	android:layout_width="100px" 
	android:layout_height="40px">
</EditText>


<Button android:text="确定" 
	android:id="@+id/relationConfirm"	
	android:layout_marginLeft = "20px"
   	android:layout_marginTop = "230px"
 	android:layout_width="90px" 
 	android:layout_height="40px">
 	</Button>
<Button android:text="取消" 
	android:id="@+id/relationCancel"	
	android:layout_marginLeft = "120px"
   	android:layout_marginTop = "230px"
 	android:layout_width="90px" 
 	android:layout_height="40px">
 	</Button>

<RadioGroup android:id="@+id/rg"	
	android:layout_marginLeft = "120px"
   	android:layout_marginTop = "120px"
 	android:layout_width="120px" 
 	android:layout_height="100px">
 	<RadioButton android:text="手机" android:id="@+id/phone" android:layout_width="wrap_content" android:layout_height="wrap_content"></RadioButton>
 	<RadioButton android:text="测量仪" android:id="@+id/phone" android:layout_width="wrap_content" android:layout_height="wrap_content"></RadioButton>
</RadioGroup>
</RelativeLayout>

